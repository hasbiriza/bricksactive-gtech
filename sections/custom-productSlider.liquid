{%- liquid
  assign section_id = 'category-slider-' | append: section.id
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_to_show | default: 8
  assign show_vendor = section.settings.show_vendor
  assign show_rating = section.settings.show_rating
  assign enable_quick_add = section.settings.enable_quick_add
-%}

<div class="page-width">
  <div class="category-slider-section" data-section-id="{{ section.id }}">
    {% if section.settings.heading != blank or collection.url %}
      <div class="category-slider-section__header">
        {% if section.settings.heading != blank %}
          <h2 class="category-slider-section__title">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if collection.url and section.settings.show_view_all %}
          <a href="{{ collection.url }}" class="category-slider-section__view-all">
            {{ section.settings.view_all_text | default: 'See All' }}
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="category-slider-section__wrapper">
      <div class="category-slider-section__navigation">
        <button class="category-slider-section__nav-btn category-slider-section__nav-btn--prev" aria-label="prev">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="category-slider-section__nav-btn category-slider-section__nav-btn--next" aria-label="next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>

      <div class="swiper category-slider-section__slider" data-swiper-config='{{ section.settings | json }}'>
        <div class="swiper-wrapper">
          {% for product in collection.products limit: products_to_show %}
            <div class="swiper-slide">
              {% render 'product-card-custom', 
                product: product, 
                show_vendor: true,
                enable_quick_add: enable_quick_add %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
.category-slider-section {
  padding: 3.2rem 0;
}

.category-slider-section__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2.4rem;
  flex-wrap: wrap;
  gap: 1.6rem;
}

.category-slider-section__title {
  font-size: 2.4rem;
  font-weight: 700;
  color: rgb(var(--color-foreground));
  margin: 0;
  line-height: 1.2;
}

.category-slider-section__view-all {
  display: inline-flex;
  align-items: center;
  gap: 0.8rem;
  color: rgb(var(--color-link));
  text-decoration: none;
  font-weight: 600;
  font-size: 1.4rem;
  transition: color 0.3s ease;
}

.category-slider-section__view-all:hover {
  color: rgb(var(--color-link-hover));
}

.category-slider-section__view-all svg {
  transition: transform 0.3s ease;
}

.category-slider-section__view-all:hover svg {
  transform: translateX(0.4rem);
}

.category-slider-section__wrapper {
  position: relative;
}

.category-slider-section__slider {
  overflow: hidden;
  margin: 0 -1rem;
}

.category-slider-section__slider .swiper-slide {
  padding: 0 1rem;
  width: auto;
  height: auto;
}

.category-slider-section__slider .swiper-wrapper {
  display: flex;
  align-items: stretch;
}

.category-slider-section__navigation {
  position: absolute;
  top: 50%;
  left: -2.4rem;
  right: -2.4rem;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  pointer-events: none;
  z-index: 10;
}

.category-slider-section__nav-btn {
  width: 4.8rem;
  height: 4.8rem;
  background: rgb(var(--color-background));
  border: 0.1rem solid rgba(var(--color-foreground), 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-shadow: 0 0.4rem 1.6rem rgba(var(--color-shadow), 0.1);
  transition: all 0.3s ease;
  pointer-events: auto;
  color: rgb(var(--color-foreground));
}

.category-slider-section__nav-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 0.8rem 2.4rem rgba(var(--color-shadow), 0.15);
  border-color: rgba(var(--color-foreground), 0.2);
}

.category-slider-section__nav-btn:disabled {
  opacity: 0.3;
  cursor: not-allowed;
  transform: none;
}

.category-slider-section__pagination {
  position: static;
  margin-top: 2.4rem;
  text-align: center;
}

.category-slider-section__pagination .swiper-pagination-bullet {
  width: 0.8rem;
  height: 0.8rem;
  background: rgba(var(--color-foreground), 0.25);
  opacity: 1;
  margin: 0 0.4rem;
  transition: all 0.3s ease;
}

.category-slider-section__pagination .swiper-pagination-bullet-active {
  background: rgb(var(--color-button));
  transform: scale(1.25);
}

.product-card-custom {
  background: rgb(var(--color-background));
  border-radius: 1.2rem;
  overflow: hidden;
  box-shadow: 0 0.2rem 0.8rem rgba(var(--color-shadow), 0.06);
  transition: all 0.3s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.product-card-custom:hover {
  box-shadow: 0 0.8rem 2.4rem rgba(var(--color-shadow), 0.12);
  transform: translateY(-0.4rem);
}

.product-card-custom__media {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
  background: rgba(var(--color-foreground), 0.04);
}

.product-card-custom__link {
  display: block;
  width: 100%;
  height: 100%;
}

.product-card-custom__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.3s ease;
}

.product-card-custom__image--secondary {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.product-card-custom:hover .product-card-custom__image--primary {
  opacity: 0;
}

.product-card-custom:hover .product-card-custom__image--secondary {
  opacity: 1;
}

.product-card-custom__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(var(--color-foreground), 0.04);
}

.product-card-custom__placeholder-svg {
  width: 6rem;
  height: 6rem;
  opacity: 0.3;
}

.product-card-custom__badge {
  position: absolute;
  top: 1.2rem;
  left: 1.2rem;
  background: rgb(var(--color-button));
  color: rgb(var(--color-button-text));
  padding: 0.4rem 0.8rem;
  border-radius: 0.6rem;
  font-size: 1.2rem;
  font-weight: 600;
  z-index: 2;
}

.product-card-custom__badge--sold-out {
  background: rgba(var(--color-foreground), 0.7);
  color: rgb(var(--color-background));
}

.product-card-custom__quick-add {
  position: absolute;
  top: 1.2rem;
  right: 1.2rem;
  width: 4rem;
  height: 4rem;
  background: rgba(var(--color-background), 0.9);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  opacity: 0;
  transform: scale(0.8);
  backdrop-filter: blur(1rem);
  color: rgb(var(--color-foreground));
}

.product-card-custom:hover .product-card-custom__quick-add {
  opacity: 1;
  transform: scale(1);
}

.product-card-custom__quick-add:hover {
  background: rgb(var(--color-background));
  box-shadow: 0 0.4rem 1.2rem rgba(var(--color-shadow), 0.15);
}

.product-card-custom__info {
  padding: 2rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.product-card-custom__vendor {
  font-size: 1.2rem;
  color: rgba(var(--color-foreground), 0.75);
  text-transform: uppercase;
  letter-spacing: 0.05rem;
  margin-bottom: 0.8rem;
}

.product-card-custom__title {
  margin: 0 0 1.2rem;
  font-size: 1.4rem;
  font-weight: 600;
  line-height: 1.3;
  min-height: 3.6rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-card-custom__title a {
  color: rgb(var(--color-foreground));
  text-decoration: none;
  transition: color 0.3s ease;
}

.product-card-custom__title a:hover {
  color: rgb(var(--color-link));
}

.product-card-custom__rating {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  margin-bottom: 1.2rem;
}

.product-card-custom__rating-count {
  font-size: 1.2rem;
  color: rgba(var(--color-foreground), 0.75);
}

.product-card-custom__price {
  margin-bottom: 1.6rem;
  display: flex;
  align-items: center;
  gap: 0.8rem;
  flex-wrap: wrap;
  min-height: 2.4rem;
}

.product-card-custom__price--sale {
  color: rgb(var(--color-button));
  font-weight: 700;
  font-size: 1.6rem;
}

.product-card-custom__price--compare {
  color: rgba(var(--color-foreground), 0.75);
  text-decoration: line-through;
  font-size: 1.2rem;
}

.product-card-custom__price--regular {
  color: rgb(var(--color-foreground));
  font-weight: 600;
  font-size: 1.6rem;
}

.product-card-custom__form {
  margin-top: auto;
}

.product-card-custom__btn {
  width: 100%;
  padding-top: 1.2rem;
  padding-bottom: 1.2rem;
  border: none;
  border-radius: 0.8rem;
  font-weight: 600;
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  line-height: 1;
}

.product-card-custom__btn--add {
  background: rgb(var(--color-button));
  color: rgb(var(--color-button-text));
}

.product-card-custom__btn--add:hover {
  background: rgba(var(--color-button), 0.9);
  transform: translateY(-0.1rem);
}

.product-card-custom__btn--options {
  background: transparent;
  color: rgb(var(--color-foreground));
  border: 0.2rem solid rgba(var(--color-foreground), 0.2);
}

.product-card-custom__btn--options:hover {
  background: rgb(var(--color-foreground));
  color: rgb(var(--color-background));
  border-color: rgb(var(--color-foreground));
}

.product-card-custom__btn--sold-out {
  background: rgba(var(--color-foreground), 0.1);
  color: rgba(var(--color-foreground), 0.5);
  cursor: not-allowed;
}

@media screen and (max-width: 749px) {
