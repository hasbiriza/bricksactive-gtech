    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 20,
      "step": 1,
      "default": 8,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All' button"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "default": "See All",
      "label": "View All button text"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": true,
      "label": "Enable quick add to cart"
    }
  ],
  "presets": [
    {
      "name": "Category Product Slider"
    }
  ]
}
{% endschema %}