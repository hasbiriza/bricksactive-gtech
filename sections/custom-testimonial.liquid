{% assign testimonials = shop.metaobjects.testimonials.values %}

<section class="testimonial-carousel-section">
  <div class="testimonial-carousel-wrapper">
    <h2 class="testimonial-section-heading">
      {{ section.settings.heading }}
    </h2>
    <div class="swiper testimonial-swiper">
      <div class="swiper-wrapper">
        {% for testimonial in testimonials %}
          <div class="swiper-slide">
            <div class="testimonial-card">
              <div class="testimonial-avatar">
                <img src="{{ testimonial.avatar | img_url: '160x160' }}" alt="{{ testimonial.name }}">
              </div>
              <div class="testimonial-stars">
                {% assign filled_stars = testimonial.stars | plus: 0 %}
                {% assign empty_stars = 5 | minus: filled_stars %}
                {% for i in (1..filled_stars) %}
                  <span class="star">★</span>
                {% endfor %}
                {% for i in (1..empty_stars) %}
                  <span class="star inactive">★</span>
                {% endfor %}
              </div>
              <div class="testimonial-quote">“{{ testimonial.quotes }}”</div>
              <div class="testimonial-name">{{ testimonial.name }}</div>
            </div>
          </div>
        {% endfor %}
      </div>
      <!-- Add Arrows -->
      <div class="testimonial-nav testimonial-prev swiper-button-prev"></div>
      <div class="testimonial-nav testimonial-next swiper-button-next"></div>
      <!-- (Dots) -->
      {% comment %} <div class="swiper-pagination"></div> {% endcomment %}
    </div>
  </div>
</section>

<style>
    .swiper-slide-active .testimonial-card {
  box-shadow: 0 12px 40px rgba(0,0,0,0.13);
  background: #fffde8;
  transition: box-shadow .4s, transform .4s, background .4s;
}
.swiper-slide .testimonial-card {
  transition: box-shadow .4s, transform .4s, background .4s;
}
.testimonial-carousel-section {
  background: #fff;
  padding: 64px 0 48px 0;
  width: 100%;
}
.testimonial-carousel-wrapper {
  max-width: 900px;
  margin: 0 auto;
  position: relative;
}
.testimonial-section-heading {
  font-size: 2rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 32px;
}
.testimonial-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fafbfc;
  border-radius: 24px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.09);
  padding: 40px 32px 32px 32px;
  margin: 12px 0;
  min-height: 340px;
}
.testimonial-avatar img {
  width: 72px;
  height: 72px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 20px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.05);
}
.testimonial-stars {
  margin-bottom: 20px;
  font-size: 20px;
}
.star {
  color: #FDBA20;
  margin: 0 1.5px;
}
.star.inactive {
  color: #e4e4e4;
}
.testimonial-quote {
  font-size: 18px;
  font-weight: 500;
  color: #222;
  text-align: center;
  margin-bottom: 16px;
  line-height: 1.4;
}
.testimonial-name {
  font-size: 16px;
  color: #555;
  margin-top: 10px;
  font-weight: 600;
  text-align: center;
}
/* Swiper Arrow style */
.testimonial-nav {
  background: #fff;
  border: none;
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  width: 38px;
  height: 38px;
  font-size: 22px;
  cursor: pointer;
  z-index: 10;
  transition: box-shadow 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}
.testimonial-nav:active {
  box-shadow: 0 2px 12px rgba(0,0,0,0.13);
}
.swiper-button-prev, .swiper-button-next {
  top: 45%;
  color: #333;
}
.swiper-button-prev { left: -50px; }
.swiper-button-next { right: -50px; }
@media (max-width: 900px) {
  .testimonial-carousel-wrapper { max-width: 100%; }
  .testimonial-card { padding: 30px 12px 24px 12px; }
  .swiper-button-prev { left: 0; }
  .swiper-button-next { right: 0; }
}

@media (max-width: 900px) {
  .testimonial-carousel-wrapper { max-width: 100%; }
  .testimonial-card { padding: 30px 12px 24px 12px; }
  .swiper-button-prev { left: 0; }
  .swiper-button-next { right: 0; }
  /* Arrow ukuran kecil di tablet/mobile */
  .testimonial-nav,
  .swiper-button-prev, .swiper-button-next {
    width: 28px;
    height: 28px;
    font-size: 16px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.07);
  }
}
@media (max-width: 600px) {
  /* Arrow lebih kecil dan naik sedikit */
  .testimonial-nav,
  .swiper-button-prev, .swiper-button-next {
    width: 22px;
    height: 22px;
    font-size: 13px;
    top: 40%;
  }
}
</style>

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  new Swiper('.testimonial-swiper', {
    loop: true,
    centeredSlides: true,
    autoplay: { delay: 4000, disableOnInteraction: false },
    slidesPerView: 1,
    spaceBetween: 24,
    navigation: {
      nextEl: '.testimonial-next',
      prevEl: '.testimonial-prev'
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    effect: 'coverflow',
    coverflowEffect: {
      rotate: 0,     // sudut rotasi slide samping, 0=tidak miring, 20-50=lebih dramatis
      stretch: 0,    // jarak antar slide, boleh 0
      depth: 100,    // kedalaman efek (coba adjust antara 80-160)
      modifier: 2,   // seberapa kuat efeknya (default 1, >1 lebih kuat)
      scale: 0.92,   // scale slide samping (0.8-0.95 biasa)
      slideShadows: false // true untuk efek shadow, false kalau mau flat
    },
    breakpoints: {
      640: { slidesPerView: 1 },
      900: { slidesPerView: 3 }
    }
  });
});
{% endjavascript %}


{% schema %}
{
  "name": "Testimonial Carousel",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What Our Customers Say"
    }
  ],
  "presets": [
    {
      "name": "Testimonial Carousel"
    }
  ]
}
{% endschema %}
